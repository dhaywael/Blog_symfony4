{# templates/includes/article_form.html.twig #}
{{ form_start(form) }}
    <div class="input-field col s12 m12 l12">
        {{ form_widget(form.picture) }}
    </div>
    <div class="row">
        <div class="input-field col s6 m6">
            {{ form_widget(form.title, {'attr': {'placeholder': 'Titre de l\'article'}}) }}
        </div>
        <div class="input-field col s6 m6">
            {{ form_widget(form.category) }}
        </div>
    </div>
    <div class="input-field col s12 m12 l12">
        {{ form_widget(form.content, {'attr': {'placeholder': 'Contenu de l\'article'}}) }}
    </div>
    <div class="input-field col s12 m12 l12">
        <p>
            <label>
                {{ form_widget(form.isPublished) }}
                <span>Publier</span>
            </label>
        </p>
    </div>
    <div class="input-field col s12 m12 l12">
        <button value="Enregistrer" class="btn btn-primary btn-large">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}

